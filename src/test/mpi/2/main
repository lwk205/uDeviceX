# nTEST: mpi.t3
rm -rf diag.txt h5 bop ply rbc.off
:
u.cp.rbc rbc/498.off  rbc.off
u.cp.sdf cyl1/cyl.dat sdf.dat
x=0.75 y=8 z=9; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/default.h <<!!!
   kBT=1e-7 rbcs walls
   pushrbc DBG_PEEK
   run
!!!
{ make clean && u.make -j; } > /dev/null
u.run 3 1 1 ./udx '
time = {
    type = "const"
    dt = 5e-4
    wall = 5e-1
    end = 4.0
}
glb = {
    L = [16, 16, 16]
}
rbc = {
    @include "rbc.test.cfg"
}
bforce = {
    type = "constant"
    f = [1.6666667,0.0,0.0]
};
dump = {
    field = true
    parts = true
    freq_field = 2.5000
    freq_parts = 2.5000
};'
u.avgh5 1 u 2 h5/flowfields-0000.h5 > h5.out.txt
