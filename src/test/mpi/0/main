#### RBC in a periodic box
# nTEST: mpi.t1
cd test/mpi/0
S=`u.cp.s`
:
u.cp.rbc rbc/498.off  rbc.off
echo 1 0 0 8  0 1 0 8  0 0 1 8  0 0 0 1 > rbcs-ic.txt
:
u.conf "$S" u/x "$S/conf/default.h" <<!
   rbcs kBT=0 DBG_PEEK
   run
!
u.make -j
u.run 2 1 1 ./udx conf.cfg '
rbc = {
     totArea = 55.553
     totVolume = 26.986
}'
awk '{print 10000*$2}' diag.txt > diag.out.txt
