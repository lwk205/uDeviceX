    L = [$X, $Y, $Z]
}
rbc = {
    stress_free      = true
    stress_free_file = \"ref.off\"
    totArea          = `off.area   ref.off`
    totVolume        = `off.volume ref.off`
}"
:
ply2punto r/00002.ply | uscale 0.1 > ply.out.txt
