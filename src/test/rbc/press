#### RBC "pressed" to a plate
# sTEST: rbc.press
set -eux
S=`pwd` C="$S/conf/poiseuille.h"
:
ae  () { awk "BEGIN {print $*}"; }
:
XS=12 YS=12 ZS=8
cp $S/data/cells/rbc/498.off rbc.off
(cd ../cmd; make ) > .make.log
cp $S/data/sdf/yplates1/yplates.dat sdf.dat
x=`ae $XS/2` y=`ae $YS/2` z=`ae $ZS/2`
cs=0 si=1
echo 1   0    0  $x \
     0 $cs -$si  $y \
     0 $si  $cs  $z \
     0   0   0   1  \
     > rbcs-ic.txt
:
u.conf "$C" <<!!!
   numberdensity=0 rbcs tend=0.5 part_freq=300  walls  wall_creation=100
   part_dumps
   run
!!!
{ make clean && u.make -j ; } > .make.log
sh runfile
ply2punto r/00003.ply | uscale 100 > ply.out.txt
