#### "press" a cell
#### 1. generate wall
#### 2. press cell to the wall
#### 3. detach cell from the wall
# sTEST: rbc.press.long
set -eu
S=`pwd` U=u/x C="$S/conf/lina.h"
cd "$S"/test/rbc/press
ae  ()   { awk "BEGIN {print $*}"; }
make0 () { make clean && u.make -j; }
ic  () {
    local x y z cs si
    x=`ae $XS/2` y=3 z=`ae $ZS/2`
    cs=0 si=1
    echo 1   0    0  $x \
	 0 $cs -$si  $y \
	 0 $si  $cs  $z \
	 0   0   0   1  \
    > rbcs-ic.txt
}
ini () {
    nv=642
    inf=999999999
    XS=12 YS=12 ZS=12
    c0=$S/data/cells/rbc/$nv.off
    c1=$S/data/cells/rbc/$nv.off
    volume=`off.volume $c1` area=`off.area $c1`
    cp $c0          rbc.stress.free
    cp $c1          rbc.off
    cp "$S/data/sdf/yplates1/yplates.dat" sdf.dat
    Rbc="rbc_ids rbc_com_dumps RBC_STRESS_FREE RBCnv=$nv RBCtotArea=$area RBCtotVolume=$volume pushrbc"
    Domain="XS=$XS YS=$YS ZS=$ZS"
}
wall () {
    u.conf "$S" "$U" "$C" <<!
    MESH_SHIFT_CENTER $Rbc $Domain
    walls wall_creation=1000
    strt_dumps strt_freq=$inf
    tend=0.11
    run
!
    make0 > .make
    ic
    u.strtdir
    sh runfile
    mv r r.wall
}
down () {
    u.conf "$S" "$U" "$C" <<!
    MESH_SHIFT_CENTER $Rbc $Domain
    pushflu=false
    walls wall_creation=0
    RESTART=true
    FORCE_CONSTANT FORCE_PAR_A=2.0
    strt_dumps strt_freq=$inf
    tend=2.1 part_freq=200
    run
!
    make0 > .make
    FORCE_PAR_EX=0 FORCE_PAR_EY=-1 FORCE_PAR_EZ=0 sh runfile
    mv r r.down
}
up () {
    u.conf "$S" "$U" "$C" <<!
    MESH_SHIFT_CENTER $Rbc $Domain
    pushflu=false
    walls wall_creation=0
    RESTART=true
    FORCE_CONSTANT FORCE_PAR_A=$A
    tend=2.1 part_freq=200
    run
!
    make0 > .make
    FORCE_PAR_EX=0 FORCE_PAR_EY=1 FORCE_PAR_EZ=0 sh runfile
    mkdir -p r.up
    mv r r.up/$A
}
ini
wall
down
A=1.0 up
