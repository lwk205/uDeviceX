#### periodic box: dumped relativly to domain center
# sTEST: rbc.nv2562.0
rm -rf bop diag.txt h5 ply rbc.off
nv=2562
cp data/cells/rbc/$nv.off rbc.off
export PATH=../tools:$PATH
(cd ../cmd; make ) > /dev/null
x=6 y=6 z=6
echo 1 0 0 $x \
     0 1 0 $y \
     0 0 1 $z \
     0 0 0  1 > rbcs-ic.txt
:
u.conf conf/couette.h <<!!!
   KL_SYNC CC_SYNC
   RBCnv=$nv
   XS=12 YS=12 ZS=12
   rbcs tend=0.5 part_freq=300
   run
!!!
{ make clean && u.make -j && make -C ../tools; } > /dev/null
sh runfile
ply2punto r/00003.ply | awk 'NR % 10 == 0' | uscale 100 > ply.out.txt
