#### periodic box: dumped relativly to domain center
# nTEST: rbc.nv2562.0
cd test/rbc/nv/2562
rm -rf bop diag.txt h5 ply rbc.off
nv=2562
u.cp.rbc rbc/sc/$nv.off rbc.off
x=24 y=6 z=6
echo 1 0 0 $x \
     0 1 0 $y \
     0 0 1 $z \
     0 0 0  1 > rbcs-ic.txt
:
u.conf "$S" u/x "$S/conf/default.h" <<!!!
   KL_SYNC CC_SYNC kBT=1e-7
   RBCnv=$nv
   rbcs
   run
!!!
{ make clean && u.make -j ; } > /dev/null
u.run ./udx conf.cfg
ply2punto r/00002.ply | awk 'NR % 10 == 0' > ply.out.txt
