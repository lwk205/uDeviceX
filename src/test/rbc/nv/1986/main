#### periodic box: dumped relativly to domain center
# nTEST: rbc.nv1986.0
cd test/rbc/nv/1986
S=`u.cp.s`
nv=1986
u.cp.rbc rbc/$nv.off rbc.off
area=`off.area rbc.off`
volume=`off.volume rbc.off`
x=4 y=6 z=8
echo 1 0 0 $x \
     0 1 0 $y \
     0 0 1 $z \
     0 0 0  1 > rbcs-ic.txt
:
u.conf "$S" u/x "$S/conf/default.h" <<!
   KL_SYNC CC_SYNC
   run
!
u.make -j
u.run ./udx conf.cfg "
glb = { 
    kBT = 0.0
}
rbc = {
    active = true
    totArea = $area
    totVolume = $volume
}
"
ply2punto r/00003.ply | uscale 10 > ply.out.txt
