#### RBC initialy rotated
# nTEST: rotated.t1
cd test/rbc/edge/1
S=`u.cp.s`
u.cp.rbc rbc/498.off rbc.off
area=`off.area rbc.off`
volume=26.98
x=0.75 y=8 z=12   c=0.5 s=0.866
echo     1  0   0 $x              \
         0 $c -$s $y              \
         0 $s  $c $z              \
         0  0   0  1 > rbcs-ic.txt
:
u.conf "$S" u/x <<!
   run
!
u.make -j
u.run ./udx conf.cfg '
glb = { 
    kBT = 0.0
}
rbc = {
    active = true
    totArea = 55.55
    totVolume = 27.0
}'
ply2punto r/00003.ply | uscale 100 > ply.out.txt
