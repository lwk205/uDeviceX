#### periodic box: stretch
# nTEST: rbc.stretch.rnd.0
rm -rf bop diag.txt h5 ply rbc.off
:
A=1e5 : stretching force L/S^2
nv=642
seed=123456
cell=data/cells/rbc/$nv.off
cp              $cell           rbc.off
u.stretch $A 5% $cell         > rbc.stretch
:
x=8 y=8 z=8; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/lina.h <<!
   rbcs
   RBC_STRETCH
   XS=16 YS=16 ZS=16 RBCnv=$nv
   tend=0.01 part_freq=300
   run
!
{ make clean && u.make -j; } > /dev/null
:
u.strtdir
RBC_RND=$seed sh runfile
ply2punto r/00003.ply | uscale 10 > ply.out.txt
