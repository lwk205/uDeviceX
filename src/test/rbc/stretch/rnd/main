#### periodic box: stretch
# nTEST: rbc.stretch.rnd
cd test/rbc/stretch/rnd
S=`u.cp.s`
:
A=1e6
nv=2562
u.cp.rbc rbc/sc/$nv.off       rbc.off
u.stretch $A 5% rbc.off  > rbc.stretch
:
XS=48 YS=32 ZS=32
x=24 y=16 z=16; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf "$S" u/x "$S/conf/default.h" <<!
   rbcs RBC_STRETCH RBC_RND MESH_SHIFT_CENTER
   numberdensity=1
   run
!
u.make -j
:
RBC_RND=$seed u.run ./udx conf.cfg "
glb = {
    L = [$XS, $YS, $ZS]
}
rbc = {
    totArea = 1564.4922174
    totVolume = 3812.3160399576
    seed = 123
    kBT = 10.0
}"
ply2punto r/00001.ply | uscale 10 > ply.out.txt
