#### periodic box: stretch
# scTEST: rbc.stretch.rnd.0
rm -rf bop diag.txt h5 ply rbc.off
:
A=1e6 : stretching force L/S^2
nv=2562
seed=123456
cell=data/cells/rbc/$nv.off
cp              $cell           rbc.off
u.stretch $A 5% $cell         > rbc.stretch
:
x=24 y=16 z=16; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/lina.h <<!
   rbcs
   numberdensity=1
   RBC_STRETCH RESTRAIN_RBC_VEL MESH_SHIFT_CENTER
   XS=48 YS=32 ZS=32 RBCnv=$nv
   dt=0.0001 tend=0.011 part_freq=100
   run
!
{ make clean && u.make -j; } > /dev/null
:
u.strtdir
RBC_RND=$seed u.run ./udx '
rbc = {
    @include "rbc.test.cfg"
}'
ply2punto r/00001.ply | uscale 15 > ply.out.txt
