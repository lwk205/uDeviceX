#### periodic box: stretch
# nTEST: rbc.stretch.stress.free.0
cd test/rbc/stretch/stress.free
S=`u.cp.s`
A=1e3
nv=642
cell="$S/data/cells/rbc/$nv.off"
cell0="$S/data/cells/sph/$nv.off"
cp              $cell           rbc.off
cp              $cell0          rbc.stress.free
u.stretch $A 5% $cell         > rbc.stretch
:
x=4 y=6 z=8; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf "$S" u/x "$S/conf/default.h" <<!
   MESH_SHIFT_CENTER RBC_STRETCH RBC_STRESS_FREE kBT=1e-7
   RBCnv=$nv
   rbcs
   run
!
u.make -j
:
u.run ./udx conf.cfg
ply2punto r/00001.ply > ply.out.txt
