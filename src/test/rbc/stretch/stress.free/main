#### periodic box: stretch
# nTEST: rbc.stretch.stress.free.0
rm -rf bop diag.txt h5 ply rbc.off
:
A=1e4
nv=642
cell=data/cells/rbc/$nv.off
cell0=data/cells/sph/$nv.off
cp              $cell           rbc.off
cp              $cell0          rbc.stress.free
u.stretch $A 5% $cell         > rbc.stretch
:
x=4 y=6 z=8; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/couette.h <<!
   MESH_SHIFT_CENTER RBC_STRETCH RBC_STRESS_FREE
   RBCnv=$nv
   rbcs
   run
!
{ make clean && u.make -j; } > /dev/null
:
u.run ./udx '
time = {
    type = "const"
    dt = 0.0001
    end = 0.5
}
glb = {
    L = [8, 12, 16]
}
rbc = {
    @include "rbc.lina.cfg"
    kBT = 1e-7;
    ks = 735.294117e-7;
}
dump = {
    parts = true;
    freq_parts = 300;
};'
ply2punto r/00003.ply | uscale 1 > ply.out.txt
