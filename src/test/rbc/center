#### RBC in a periodic box: dumped relativly to the domain center
# cTEST: center.0
rm -rf bop diag.txt h5 ply rbc.off
cp data/cells/rbc.498.off rbc.off
export PATH=../tools:$PATH
(cd ../cmd; make ) > /dev/null
x=4 y=6 z=8; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/couette.h <<!!!
   MESH_SHIFT_CENTER
   XS=8 YS=12 ZS=16
   rbcs tend=0.5 part_freq=300
   run
!!!
{ make clean && u.make -j && make -C ../tools; } > /dev/null
sh runfile
ply2punto r/00003.ply | uscale 100 > ply.out.txt
