#### check forces on a cell with random force
# nTEST: rbc.u.rnd
cd test/rbc/u/rnd
S=`u.cp.s`
:
nv=642
u.cp.ic  two         rbcs-ic.txt
u.cp.rbc rbc/$nv.off rbc.off
area=`off.area rbc.off`
volume=`off.volume rbc.off`
u.conf $S u/rbc/force  "$S/conf/default.h" <<!
       RBC_RND  kBT=0
       run
!
u.make -j
export RBC_RND=42
u.run ./udx conf.cfg "
rbc = {
    totArea = $area
    totVolume = $volume
}" | uscale 0.1 >  forces.out.txt
