#### periodic box: stretch
# nTEST: rbc.u.main.0
rm -rf bop diag.txt h5 ply rbc.off
:
S=`pwd`
U=u/rbc/main
C=conf/lina.h
A=1e3 : stretching force L/S^2
nv=2562
seed=123456
cell=data/cells/rbc/$nv.off
cp              $cell           rbc.off
u.stretch $A 5% $cell         > rbc.stretch
cp $S/data/ic/ident             rbcs-ic.dat
:
x=24 y=16 z=16; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf $S $U $C <<!
   rbcs
   numberdensity=1
   RBC_STRETCH RESTRAIN_RBC_VEL MESH_SHIFT_CENTER 
   XS=48 YS=32 ZS=32 RBCnv=$nv
   dt=0.00001 tend=1.1 part_freq=10000
   run
!
{ make clean && u.make -j; } > /dev/null
:
export RBC_RND=$seed
u.run ./udx
ply2punto r/00001.ply | uscale 10 > ply.out.txt
