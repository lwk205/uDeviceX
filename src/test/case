# sTEST: case.0
set -eu
S=`pwd` U=u/x C="$S/conf/default.h"
c="$S/data/cells/rbc/498.off"
UDX=abcd S="$S" u.case -f $c -b pwd -d case0 $U "$C" <<!
run
!
if test -e case0/abcd; then echo ok; else echo fail; fi > case.out.txt

# sTEST: case.1
:
S=`pwd` U=u/x C="$S/conf/test.h"
:
export S
w="$S/data/sdf/wall1/wall.dat"
u.case -d case0 -f "$w" sdf.dat \
$U \
conf/test.h <<!
   XS=12 YS=12 ZS=12
   tend=1.0 part_freq=300 walls wall_creation=1
   field_dumps part_dumps field_freq=300
   WVEL_PAR_Z
   run
!
u.avgh5 1 u 2 case0/h5/flowfields-0003.h5 | \
    uscale 0.1 > h5.out.txt
