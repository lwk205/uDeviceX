#### freeze after high temp
# nTEST: freeze.t0
rm -rf bop h5 diag.txt
c=conf/zurich.h
u.cp.sdf yplates1/yplates.dat sdf.dat
u.conf $c <<!!!
   numberdensity=3
   walls
   S_LEVEL=0 kBT=1 adpd_b=12.5 gdpd_b=5.61125
   run
!!!
(make clean && u.make -j) > make.log
u.run ./udx '
time = {
    type = "const"
    dt = 0.05
    wall = 0.5
    end = 41.0
}
glb = {
    L = [12, 32, 12]
}
wvel = {
    type = "shear";
    gdot = 5.0;
    vdir = 0;
    gdir = 1;
};
dump = {
    field = true;
    parts = true;
    freq_field = 800;
    freq_parts = 800;
};'
:
u.avgh5 0 u 1 h5/flowfields-0001.h5 | uscale 0.01 > h5.out.txt
