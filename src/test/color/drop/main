# drop in poiseuille flow
# nTEST: color.drop.t1
rm -rf bop diag.txt h5
s=.
u=u/x
u.cp.sdf yplates1/yplates.dat sdf.dat
Domain="XS=16 YS=16 ZS=16"
Walls="walls wall_creation=1"
u.conf $s $u conf/zurich.h <<!!!
   $Domain
   $Walls
   numberdensity=2
   tend=4.01
   kBT=0.00444302
   run
!!!
{ make clean && u.make -j; } > make.log
u.run ./udx '
bforce = {
    type = "constant";
    f = [0.6, 0.0, 0.0];
};
wvel = {
    type = "shear";
    gdot = 5.0;
    vdir = 0;
    gdir = 1;
};
iccolor = {
    kind = "drop";
    R    = 4.0;
};
dump = {
    field = true;
    parts = true;
    freq_field = 8000;
    freq_parts = 8000;
};'
cm() { awk '$7 == 1 {n++; x+=$1; y+=$2; z+=$3} END {print x/n, y/n, z/n}'; }
 ../tools/bop2txt2 bop/solvent-00001.bop -- bop/colors_solvent-00001.bop | \
            cm > drop.out.txt
