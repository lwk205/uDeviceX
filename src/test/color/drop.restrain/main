# drop in poiseuille flow
# nTEST: color.drop.restrain.t1
rm -rf bop diag.txt h5
s=.
u=u/x
u.cp.sdf yplates1/yplates.dat sdf.dat
u.conf $s $u conf/zurich.h <<!!!
   walls
   numberdensity=2
   kBT=0.00444302
   run
!!!
{ make clean && u.make -j; } > make.log
u.run ./udx '
time = {
    type = "const"
    dt = 5e-4
    wall = 5e-4
    end = 4.01
}
glb = {
    L = [16, 16, 16]
}
bforce = {
    type = "constant"
    f = [0.6, 0.0, 0.0]
}
wvel = {
    type = "shear"
    gdot = 5.0
    vdir = 0
    gdir = 1
}
restrain = {
    kind = "red"
    freq = 1000
}
iccolor = {
    kind = "drop"
    R    = 4.0
}
dump = {
    field = true
    parts = true
    freq_field = 4.0000
    freq_parts = 4.0000
}'
cm() { awk '$7 == 1 {n++; x+=$1; y+=$2; z+=$3} END {print x/n, y/n, z/n}'; }
 ../tools/bop2txt2 bop/solvent-00001.bop -- bop/colors_solvent-00001.bop | \
            cm > drop.out.txt
