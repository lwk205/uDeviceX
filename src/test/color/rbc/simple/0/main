# two steps of rbc with colors
# TEST: color.rbc.t1
rm -rf bop diag.txt h5 r rbc.off
u.cp.rbc rbc/498.off rbc.off
x=4 y=4 z=4; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 >  rbcs-ic.txt
u.conf conf/default.h <<!!!
   rbcs
   multi_solvent=true color_freq=1   
   numberdensity=3
   run
!!!
{ make clean && u.make -j; } > make.log
u.run ./udx  '
time = {
    type = "const"
    dt = 2e-4
    end = 1e-3
}
glb = {
    L = [8, 8, 8]
}
rbc = {
    @include "rbc.test.cfg"
}
dump = {
    parts = true
    freq_parts = 4e-4
}'
bop2txt2 bop/solvent-00000.bop -- bop/colors_solvent-00000.bop |
  awk '{print $7}' | sort -g > color.out.txt
