#### random particles; density 1
# nTEST: bulk.t0
cd test/bulk/0
S=`u.cp.s`
u.conf "$S" u/bulk "$S/conf/default.h" <<!
       run
!
u.make -s -j
X=4 Y=4 Z=4 N=64
u.pre.gen_random $X $Y $Z $N > pp.txt
:
u.run ./udx conf.cfg "
in  = \"pp.txt\"
out = \"ff.txt\"
glb = { 
  kBT = 0.0
  L = [$X, $Y, $Z] 
}
"
:
uscale 10000 ff.txt | sort > ff.out.txt
