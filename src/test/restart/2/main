#### RBC in a periodic box
# nTEST: rstrt.t3
:
u.cp.rbc rbc/498.off rbc.off
x=0.75 y=8 z=12; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf "$S" u/x "$S/conf/default.h" <<!
   rbcs kBT=1e-7
   BASE_STRT_DUMP=\"bin.1/strt\"
   strt_dumps=true
   strt_freq=10000
   RESTART=false
   run
   RESTART=true
   pushrbc
   BASE_STRT_READ=\"bin.1/strt\"
   BASE_STRT_DUMP=\"bin.2/strt\"
   run
!
:
u.strtdir bin.1
u.strtdir bin.2
{ make clean && u.make -j ; } > /dev/null
u.run ./bin.1/udx '
time = {
    type = "const"
    dt = 5e-4
    end = 0.5
}
glb = {
    L = [16, 16, 16]
}
rbc = {
    @include "rbc.test.cfg"
}
dump = {
    parts = true;
    freq_parts = 0.1500
};'
:
:
u.run ./bin.2/udx '
time = {
    type = "const"
    dt = 5e-4
    end = 0.5    
}
glb = {
    L = [16, 16, 16]
}
rbc = {
    @include "rbc.test.cfg"
}
bforce = {
    type = "constant"
    f = [3.333e-2, 0., 0.]
}
dump = {
    parts = true
    freq_parts = 0.1500
}'
ply2punto r/00002.ply | uscale 100 > ply.out.txt
