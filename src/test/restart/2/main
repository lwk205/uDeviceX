#### RBC in a periodic box
# nTEST: rstrt.t3
cd test/restart/2/
:
u.cp.rbc rbc/498.off rbc.off
x=0.75 y=8 z=12; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.strtdir .
u.run udx conf.cfg
u.run udx conf.cfg '
glb = {
    restart = true
}
rbc = {
    push = true
}
bforce = {
    type = "constant"
    f = [3.333e-2, 0., 0.]
}'
ply2punto r/00002.ply | uscale 100 > ply.out.txt
