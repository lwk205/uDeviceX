#### Plates : walls are oscillating vx = A*sin(w*t) 
# cTEST: flow.vwall.sin.long
rm -rf bop h5 diag.txt
:
cp data/sdf/zplates1/main.dat sdf.dat
:
make0 () { { make clean && u.make -j; } > /dev/null ; }
:
inf=999999999
: pi/20
w=0.1570796326794897
dt=1e-3
DPD="S_LEVEL=0 kBT=0.0 numberdensity=10 adpd_b=3 gdpd_b=4.5 dt=$dt"
Domain="XS=12 YS=12 ZS=12"
Wvel="WVEL_SIN WVEL_PAR_Z   WVEL_PAR_A=0.1 WVEL_PAR_W=$w WVEL_LOG_FREQ=1000"
u.conf conf/poiseuille.h <<!
   $DPD $Domain $Wvel walls
   strt_dumps strt_freq=$inf
   tend=90.0 wall_creation=10000
   run
!
u.strtdir && make0 && sh runfile
:
u.conf conf/poiseuille.h <<!
   $DPD $Domain $Wvel walls
   RESTART=true
   field_dumps field_freq=100 part_dumps part_freq=100 tend=40.0
   run
!
make0 && mkdir -p h5 && sh runfile
:
u.avgh5 1 u 2 h5/flowfields-001[0123].h5 | uscale 0.1 > h5.out.txt
