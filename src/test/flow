#### Double poiseuille
# nTEST: flow.t1
rm -rf bop h5 diag.txt rbc.off
:
(cd ../cmd; make ) > /dev/null
:
u.conf conf/double.poiseuille.h <<!!!
   tend=2.01 part_freq=4000
   FORCE_DOUBLE_POISEUILLE
   field_dumps part_dumps
   field_freq=4000 
   run
!!!
(make clean && u.make -j) > /dev/null
sh runfile
u.avgh5 0 u 1 h5/flowfields-0001.h5 | uscale 0.1 > h5.out.txt

#### Plates : poiseuille
# nTEST: flow.t3
rm -rf bop h5 diag.txt rbc.off
:
cp data/sdf/wall1/wall.dat sdf.dat
:
u.conf conf/poiseuille.h <<!!!
   tend=2.0 part_freq=300 walls wall_creation=100
   field_dumps part_dumps field_freq=300
   FORCE_CONSTANT
   run
!!!
(make clean && u.make -j) > /dev/null
sh runfile
u.avgh5 1 u 2 h5/flowfields-0013.h5 > h5.out.txt

#### flow around cylinder
# nTEST: flow.t4
rm -rf bop h5 diag.txt rbc.off
:
cp data/sdf/cyl1/cyl.dat sdf.dat
:
u.conf conf/poiseuille.h <<!!!
   tend=4.0 part_freq=300 walls wall_creation=100
   field_dumps part_dumps field_freq=300 FORCE_CONSTANT
   run
!!!
:
(make clean && u.make -j) > /dev/null
sh runfile
u.avgh5 1 u 1 h5/flowfields-0026.h5 > h5.out.txt


#### 4 roller mills
# nTEST: flow.t5
rm -rf bop h5 diag.txt rbc.off
:
(cd ../cmd; make ) > /dev/null
:
u.conf conf/default.h <<!!!
   tend=2.01 part_freq=4000
   FORCE_4ROLLER
   FORCE_PAR_A=0.2
   field_dumps part_dumps
   field_freq=4000 
   run
!!!
(make clean && u.make -j) > /dev/null
sh runfile
u.avgh5 0 u 1 h5/flowfields-0001.h5 | uscale 0.1 > h5.out.txt
