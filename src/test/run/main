### Run out of source
# sTEST: run.0
mkdir0 () {
   mkdir -p "$1"
   if test ! -d "$1"; then echo >&2 'fail to create: '"$1"; exit 2; fi
}
t="${TMP:-/tmp}"/udx.run.$$
mkdir0 "$t"
trap 'rm -r "$t"' 0 1 2 3 15
u=u/x s=`pwd` c="$s/conf/default.h"
(
   cd "$t"
   u.conf "$s" "$u" "$c" <<!
   strt_dumps=true tend=5e-4
   run
!
   { make clean && u.make -j; } > "$s"/make.log
   u.strtdir .
   sh runfile
   echo $?
) > run.out.status
