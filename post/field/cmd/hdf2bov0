#!/usr/bin/env python2

import sys

prog = "u.hdf2bov0"

def msg(s): sys.stderr.write(s)
def err(s):
    msg("%s: %s\n" % (prog, s))
    sys.exit(2)

try: import h5py as h5
except ImportError: err("fail to import python module `h5py`")

def shift(a): return a.pop(0)
def fopen(n):
    try: f = h5.File(n, "r")
    except IOError: err("%s fails to open `%s`" % (prog, n))
    return f

argv = sys.argv
argc = len(argv)
shift(argv)

h = shift(argv)
b = shift(argv)

print h, b

f = fopen(b)
