set -ue
. ./util

s=../src
c=conf.def.h

u=u/safe
Safe="KL_SYNC CC_SYNC"

# domain size: oneA,    oneB, small, normal, big
big

force=1.25e-02
Force="FORCE_CONSTANT FORCE_PAR_A=$force"
radius=3.5; rbc1       # rbc[1]
p_lina                 # p_[test|lina]

Domain="XS=$xs YS=$ys ZS=$zs"
u.conf "$s" "$u" "$c" <<!
    $Safe
    $Domain
    $Force
    $Rbc
    $Param
    $Bop
    run
!
{ make clean && u.make -j; } > .make.log
u.strtdir . $nx $ny $nz
u.batch     $nx $ny $nz ./udx 04:00:00
