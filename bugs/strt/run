set -eu

ini () {
    #s=../../../bak.0/src
    s=../../src
    u=u/safe
    c=conf.def.h
}

conf () {
    u.conf "$s" "$u" "$c" <<!
    KL_SYNC CC_SYNC
    run
!
}

cp0 () {
    if test -d strt; then rm -r strt; fi
    cp -r /scratch/lisergey/s0 strt
}

run () {
    u.strtdir .
    { make clean && u.make -j; } > .make.log
    sh runfile
}

ini
conf
cp0
run
