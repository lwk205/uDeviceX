load("vect") $
load("pdiff") $
load("cgrind") $

load("util.mac") $

a: [ax, ay, az] $
b: [bx, by, bz] $
c: [cx, cy, cz] $
d: [dx, dy, dz] $

ab: b - a;
ac: c - a;
bd: d - b;
bc: c - b;

[kx, ky, kz]: cross(ab, ac);
[nx, ny, nz]: cross(bd, bc);

kn: dot(['kx, 'ky, 'kz], ['nx, 'ny, 'nz]);
kk: dot(['kx, 'ky, 'kz], ['kx, 'ky, 'kz]);
nn: dot(['nx, 'ny, 'nz], ['nx, 'ny, 'nz]);

rsq: 1/sqrt('kk * 'nn);
E: 'kn * 'rsq;

with_stdout("cos.c",
fmt(
  ['E ,  E,   sl(E)],
  ['kn,  kn,  sl(kn)],
  ['rsq, rsq, sl(rsq)],

  ['kk, kk, sl(kk)],
  ['nn, nn, sl(nn)],

  ['nx, nx, sl(nx)],
  ['ny, ny, sl(ny)],
  ['nz, nz, sl(nz)],
  ['kx, kx, sl(kx)],
  ['ky, ky, sl(ky)],
  ['kz, kz, sl(kz)]));
