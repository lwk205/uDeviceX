# utils for cmd tools

msg ()  { printf '%s\n' "$*" >&2; }
err ()  { msg "$@"; exit 1; }

# "intermediate"
exec0() { exec "$@"; }

exec1() { # "ultimate" : respects DRYRUN
    msg cmd: "$@"
    if test -z ${DRYRUN+x}
    then exec "$@"
    fi
}

module1() { # "ultimate" : respects DRYRUN
    msg module: "$@"
    if test -z ${DRYRUN+x}
    then module "$@"
    fi
}
