. u.utils

run_one() { # single processor
    exec0 `u.wrap "$e"` "$e" "$@"
}

env_panda() {
    export PATH=/usr/lib64/mpich/bin:"$PATH"
}

run_mpi() {
    env_panda
    exec1 mpirun -n $n `u.wrap "$e"` $x $y $z "$@"
}

n=$1; shift
x=$1; shift
y=$1; shift
z=$1; shift
e=$1; shift # executable

# one processor?
onep() { test $n -eq 1; }
if onep; then run_one "$@"; else run_mpi "$@"; fi
