#!/bin/bash

msg () { printf '%s\n' "$*" >&2; }
exec0() { # echo and exec
    msg cmd: "$@"; exec "$@"
}

run_one() { # single processor
    exec0 "$e" "$@"
}

run_mpi() {
    exec0 mpirun.mpich -n $n "$e" $x $y $z "$@"
}

n=$1; shift
x=$1; shift
y=$1; shift
z=$1; shift
e=$1; shift # executable

# one processor?
onep() { test $n -eq 1; }
if onep; then run_one "$@"; else run_mpi "$@"; fi
