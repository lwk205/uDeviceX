: ${DBG=0}

msg () { echo >&2 "$@"; }
err () { msg "$@"; exit 2; }
e   () {
    if test ! "$DBG" = 0; then msg 'cmd: '"$@"; fi
    eval "$@"
}

rm0 () {
    if test ! "$DBG" = 0; then return; fi
    e rm -r "$@"
}

to_abs () ( # to absolute path
    local d f
    f="$1"
    d=`dirname "$f"`
    f=`basename "$f"`
    cd "$d"
    echo "`pwd`/$f"
)
