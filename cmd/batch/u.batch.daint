. u.utils

n=$1; shift
x=$1; shift
y=$1; shift
z=$1; shift
e=$1; shift # executable

if   test $#   -eq 0
then Time="--time 00:10:00"
elif test "$1"   = -
then                   shift
else Time="--time $1"; shift
fi

set -x
Args="-C gpu $Time $@"
exec1 sbatch -N $n $Args /dev/stdin <<EOF
#!/bin/bash

. u.load.daint
srun ./udx $x $y $z
EOF
