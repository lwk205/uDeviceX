. u.conf.re

i="$1" d="$b/$i"

# suffix
su=bop

find0 () (
    cd "$d/flu"
    find . -name "*.$su" -type f
)

strip0 () { basename "$1" ."$su"; }
strip () {
    while read f; do strip0 "$f"; done
}

# uniq and first
uni () { awk '!($0 in s){print; s[$0]}'; }
fst () { awk 'NR == 1'; }
gid () { find0 | strip | uni | sort -r  | fst; }

id=`gid`
if test -z "$id"
then
    printf 'no id\n' "$id" >&2
    exit 1
fi

echo "id: $id"
u.re.peek0 "$i" "$id"
