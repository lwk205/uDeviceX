. u.conf.util

: ${UPYTHON=python3}
prog=u.python

usg () {
    msg "$prog [OPTION].."
    msg 'udx python wrapper'
    exit
}
if test $# -ne 0 && test "$1" = -h; then usg; fi

h=`u.host`
if test $# -ne 0
then err 'u.host failed'
fi

case "$h" in
   daint) e module load cray-python/3.6.1.1 ;;
esac

if ! e "$UPYTHON" --version '>/dev/null' '2>/dev/null'
then err "cannot find '$UPYTHON'"
fi
   
"${UPYTHON}" "$@"
