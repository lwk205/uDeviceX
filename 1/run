set -ue
. ./util

small  () { nx=6   ny=1 nz=1; }
normal () { nx=12  ny=2 nz=2; }

s=../src
c=conf.def.h

u=u/x
Safe="KL_SYNC CC_SYNC"

safe_cp /scratch/snx1600/lisergey/channel/sdf.dat sdf.dat

xs=32 ys=32 zs=32
Domain="XS=$xs YS=$ys ZS=$zs"
normal # sets nx, ny, nz
geom   # compute lx, ly, lz

u.conf "$s" "$u" "$c" <<!
    $Safe
    $Domain
    run
!
{ make clean && u.make -j; } > /dev/null
u.strtdir . $nx $ny $nz
u.batch     $nx $ny $nz ./udx 30:00
